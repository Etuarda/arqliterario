
<% unless user_signed_in? %>

  <section class="pt-16 pb-20">
    <div class="container mx-auto px-6 text-center max-w-3xl">
      <h1 class="text-4xl md:text-5xl mb-6 italic leading-snug">
        Um porto seguro para as suas histórias lidas.
      </h1>

      <p class="text-lg text-ink-muted font-light mb-10 leading-relaxed">
        Catalogue suas descobertas e guarde a essência de cada página virada em um memorial atemporal.
      </p>

      <%= render "shared/open_library_search" %>

      <div class="mt-20 text-left">
        <div class="flex justify-between items-center mb-10 border-b border-border pb-4">
          <h2 class="sans text-[10px] uppercase tracking-[3px] font-bold text-ink">
            Recém Adicionados ao Arquivo
          </h2>

          <%= link_to "Ver acervo completo", books_path,
                class: "text-xs italic text-clay cursor-pointer hover:underline" %>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8">
          <% (@recent_books || []).each do |book| %>
            <%= link_to book_path(book), class: "book-card group" do %>
              <div class="book-cover-small">
                <% if book.status.present? %>
                  <div class="status-badge"><%= book.status_label %></div>
                <% end %>
              </div>

              <h3 class="text-md leading-tight mb-1"><%= book.title %></h3>
              <p class="text-[11px] text-clay italic uppercase tracking-wider"><%= book.author %></p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>

<% end %>



<% if user_signed_in? %>

  <section class="pt-12 pb-20">
    <div class="container mx-auto px-6 max-w-5xl">

     
      <div class="flex flex-col md:flex-row justify-between items-end mb-12 border-b border-border pb-8">
        <div>
          <p class="sans text-[10px] uppercase tracking-[4px] text-clay mb-2 font-bold">
            Guardião de Histórias
          </p>
          <h2 class="text-4xl italic">
            Bem-vindo, <%= current_user.name.presence || current_user.email %>
          </h2>
        </div>

        <div class="flex mt-6 md:mt-0">
          <div class="stat-box text-center px-8">
            <span class="block text-2xl font-light"><%= @count_lidos %></span>
            <span class="sans text-[9px] uppercase tracking-widest text-ink-muted">Lidos</span>
          </div>

          <div class="stat-box text-center px-8">
            <span class="block text-2xl font-light"><%= @count_lendo %></span>
            <span class="sans text-[9px] uppercase tracking-widest text-ink-muted">Lendo</span>
          </div>

          <div class="stat-box text-center px-8">
            <span class="block text-2xl font-light"><%= @count_quero_ler %></span>
            <span class="sans text-[9px] uppercase tracking-widest text-ink-muted">Desejados</span>
          </div>
        </div>
      </div>


     
      <div class="max-w-2xl mx-auto mb-16">
        <%= form_with url: books_path, method: :get, local: true, class: "relative" do %>

          <span class="absolute left-5 top-1/2 -translate-y-1/2 text-clay opacity-50" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
              viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2.5"
              stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </span>

          <%= text_field_tag :q,
                params[:q],
                placeholder: "Pesquisar em minha biblioteca...",
                class: "w-full bg-white border border-border rounded-full py-3 px-12 sans text-[11px] uppercase tracking-widest focus:outline-none focus:border-clay transition-colors shadow-sm" %>

        <% end %>
      </div>


    
      <div>
        <div class="flex justify-between items-center mb-8">
          <h3 class="sans text-[10px] uppercase tracking-[2px] font-bold text-ink">
            Minha Biblioteca Pessoal
          </h3>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
          <% (@my_books || []).each do |book| %>
            <%= link_to book_path(book), class: "book-card" do %>
              <div class="book-cover-small">
                <% if book.status.present? %>
                  <div class="status-badge"><%= book.status_label %></div>
                <% end %>
              </div>

              <h3 class="text-sm leading-tight mb-1 font-semibold"><%= book.title %></h3>
              <p class="text-[10px] text-ink-muted italic"><%= book.author %></p>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </section>

<% end %>
