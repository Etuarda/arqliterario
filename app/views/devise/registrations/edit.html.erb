<div class="container">
  <div class="registration-box">
    <h2 class="form-heading">Editar conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "E-mail", class: "input-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "vintage-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="hint">Aguardando confirmação para: <%= resource.unconfirmed_email %></p>
      <% end %>

      <div class="form-group">
        <%= f.label :password, "Nova senha", class: "input-label" %>
        <p class="hint">(deixe em branco se não quiser alterar)</p>
        <%= f.password_field :password, autocomplete: "new-password", class: "vintage-input" %>

        <% if @minimum_password_length %>
          <p class="hint">Mínimo: <%= @minimum_password_length %> caracteres</p>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmar nova senha", class: "input-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "vintage-input" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "Senha atual", class: "input-label" %>
        <p class="hint">(precisamos da senha atual para confirmar alterações)</p>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "vintage-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Atualizar", class: "vintage-button" %>
      </div>
    <% end %>

    <hr class="vintage-divider">

    <h3 class="form-subheading">Excluir minha conta</h3>
    <p class="hint">Se você não quer mais manter sua conta, pode excluir abaixo.</p>

    <%= button_to "Excluir minha conta",
          registration_path(resource_name),
          data: { confirm: "Tem certeza que deseja excluir sua conta?", turbo_confirm: "Tem certeza que deseja excluir sua conta?" },
          method: :delete,
          class: "vintage-button" %>

    <p style="margin-top: 1rem;">
      <%= link_to "Voltar", books_path, class: "toggle-link" %>
    </p>
  </div>
</div>
