<section class="pt-6 pb-20">
  <div class="auth-card">
    <div class="text-center mb-8">
      <h2 class="text-2xl mb-1 italic">Novo Memorial</h2>
      <p class="sans text-[9px] uppercase tracking-[3px] text-ink-muted">Inscrição de Guardião</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.text_field :name, class: "input-field", placeholder: "Como devemos chamar-te?" %>
      <%= f.email_field :email, autocomplete: "email", class: "input-field", placeholder: "Teu melhor e-mail" %>

      <%= f.password_field :password, autocomplete: "new-password", class: "input-field", placeholder: "Criar senha" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field", placeholder: "Confirmar senha" %>

      <%= f.submit "Registrar e Entrar", class: "btn-refined btn-primary w-full mt-4" %>
    <% end %>
  </div>
</section>
