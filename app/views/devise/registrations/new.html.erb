<div class="container">
  <div class="registration-box">
    <h2 class="form-heading">Criar conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "Nome", class: "input-label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "vintage-input" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "E-mail", class: "input-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "vintage-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Senha", class: "input-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "vintage-input" %>
        <% if @minimum_password_length %>
          <p class="hint">MÃ­nimo: <%= @minimum_password_length %> caracteres</p>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmar senha", class: "input-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "vintage-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Criar conta", class: "vintage-button" %>
      </div>
    <% end %>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
